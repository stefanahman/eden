#rctrl + ralt + rcmd - 9 : skhd -k "ctrl - 9"
#rctrl + ralt + rcmd - 0 : skhd -k "ctrl - 0"

# --- Window focus (arrow keys like Hyprland) ---
rctrl + ralt + rcmd - left  : yabai -m window --focus west
rctrl + ralt + rcmd - down  : yabai -m window --focus south
rctrl + ralt + rcmd - up    : yabai -m window --focus north
rctrl + ralt + rcmd - right : yabai -m window --focus east

# --- Window swap (Shift+Super+Arrow) ---
rctrl + ralt + rcmd + shift - left  : yabai -m window --swap west
rctrl + ralt + rcmd + shift - down  : yabai -m window --swap south
rctrl + ralt + rcmd + shift - up    : yabai -m window --swap north
rctrl + ralt + rcmd + shift - right : yabai -m window --swap east

rctrl + ralt + rcmd + lcmd - left  : yabai -m window --warp west
rctrl + ralt + rcmd + lcmd - down  : yabai -m window --warp south
rctrl + ralt + rcmd + lcmd - up    : yabai -m window --warp north
rctrl + ralt + rcmd + lcmd - right : yabai -m window --warp east

# --- Resize windows (Super+Ctrl+Arrow) ---
rctrl + ralt + rcmd - 0x1B  : yabai -m window --resize left:-40:0
rctrl + ralt + rcmd - 0x18 : yabai -m window --resize right:40:0
rctrl + ralt + rcmd + shift - 0x1B : yabai -m window --resize top:0:-40
rctrl + ralt + rcmd + shift - 0x18 : yabai -m window --resize bottom:0:40

# --- Balance / equalize ---
rctrl + ralt + rcmd - e : yabai -m space --balance

# --- Toggle float / fullscreen / monocle ---
#hyper - space  : yabai -m window --toggle float; yabai -m window --grid 4:4:1:1:2:2
#hyper - f      : yabai -m window --toggle zoom-fullscreen
#hyper - m      : yabai -m window --toggle zoom-parent

# --- Workspaces (Spaces) ---
hyper - 1 : yabai -m space --focus 1
hyper - 2 : yabai -m space --focus 2
hyper - 3 : yabai -m space --focus 3
hyper - 4 : yabai -m space --focus 4
hyper - 5 : yabai -m space --focus 5
hyper - 6 : yabai -m space --focus 6
hyper - 7 : yabai -m space --focus 7
hyper - 8 : yabai -m space --focus 8
hyper - 9 : yabai -m space --focus 9


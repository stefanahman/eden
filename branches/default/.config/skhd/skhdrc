#################################
# Omarchy-like SKHD config
# Super = Hyper (CapsLock = ⌃⌥⇧⌘)
#################################

# --- Launchers ---
rctrl + ralt + rcmd - return : open -na "Ghostty"          # Super+Return → Terminal
rctrl + ralt + rcmd - space  : open -a "Raycast" || open -a "Spotlight.app"  # Super+Space → Launcher
rctrl + ralt + rcmd + lshift - space : open -a "System Settings.app"            # Super+Alt+Space → Omarchy Menu

# --- Apps ---
#rctrl + ralt + rcmd - b : open -na "Safari"                  # Super+B → Browser
rctrl + ralt + rcmd - f : open -a "Finder"                   # Super+F → File Manager
rctrl + ralt + rcmd - m : open -na "Spotify"                 # Super+M → Music
rctrl + ralt + rcmd - t : open -na "Ghostty" --args -e /opt/homebrew/bin/btop
#rctrl + ralt + rcmd - slash : open -a "1Password"           # Super+/ → Password Manager
rctrl + ralt + rcmd - n : open -na "Ghostty" --args -e /opt/homebrew/bin/nvim # Super+N → Neovim
rctrl + ralt + rcmd - c : open -a "Cursor"                 # Super+C → Cursor
#rctrl + ralt + rcmd - e : open -a "Mail"                     # Super+E → Email
rctrl + ralt + rcmd - a : $HOME/.local/bin/open-web-browser bardo --new-window https://chatgpt.com         # Super+A → AI
rctrl + ralt + rcmd - l : open -a "Linear"         # Super+L → Linear
rctrl + ralt + rcmd - g : /opt/homebrew/bin/lazygit
#rctrl + ralt + rcmd - g : $HOME/.local/bin/open-web-browser bardo --new-window https://app.graphite.dev         # Super+G → Graphite
rctrl + ralt + rcmd - s : open -na "Slack"         # Super+A → Slack
rctrl + ralt + rcmd - b : $HOME/.local/bin/open-web-browser default         # Super+B -> Private browser
rctrl + ralt + rcmd + lshift - b : $HOME/.local/bin/open-web-browser bardo         # Super+B -> Private browser
#rctrl + ralt + rcmd - g : open -na "Signal"                  # Super+G → Messenger (Signal)
rctrl + ralt + rcmd + shift - g : open -na "WhatsApp"        # Super+Shift+G → Messenger (WhatsApp)
#rctrl + ralt + rcmd + alt - g : open "https://chat.google.com" # Super+Alt+G → Messenger (Google Chat)


lctrl + lalt + lcmd - right : $HOME/.local/bin/yabai_next_space_on_display.sh
lctrl + lalt + lcmd - left : $HOME/.local/bin/yabai_prev_space_on_display.sh


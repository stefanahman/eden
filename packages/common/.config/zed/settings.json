// Zed Editor Settings
//
// Post-deploy setup:
//   1. Install extensions: Everforest (theme)
//   2. API key for AI: Zed Settings > AI > Anthropic > paste key (stored in OS keychain)
//   3. Verify: Cmd+Shift+P → "theme" → Everforest Dark should be active
{
  "theme": {
    "mode": "dark",
    "dark": "Everforest Dark",
    "light": "Everforest Light"
  },

  "buffer_font_family": "CaskaydiaMono Nerd Font",
  "buffer_font_size": 14,
  "ui_font_size": 14,

  "vim_mode": true,
  "vim": {
    "use_system_clipboard": "always"
  },

  "autosave": {
    "after_delay": {
      "milliseconds": 1000
    }
  },

  "assistant": {
    "default_model": {
      "provider": "anthropic",
      "model": "claude-sonnet-4-5-20250929"
    },
    "version": "2"
  },

  "terminal": {
    "font_family": "CaskaydiaMono Nerd Font",
    "font_size": 14,
    "shell": {
      "program": "zsh"
    }
  },

  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },

  "tab_size": 2,
  "soft_wrap": "editor_width",
  "format_on_save": "off",
  "scroll_beyond_last_line": "one_page"
}
